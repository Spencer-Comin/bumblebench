#define NAME__(tm) Get ## tm ## Bench
#define NAME_(tm) NAME__(tm)
#define NAME NAME_(TYPEMODE)

#define OP__(tm) get ## tm
#define OP_(tm) OP__(tm)
#define OP OP_(TYPEMODE)

package net.adoptopenjdk.bumblebench.unsafe;

import net.adoptopenjdk.bumblebench.core.MicroBench;
import net.adoptopenjdk.bumblebench.unsafe.Native;
import jdk.internal.misc.Unsafe;
import java.lang.reflect.Field;
import java.lang.reflect.InaccessibleObjectException;

public class NAME {
    static final Unsafe UNSAFE;
    public static ACC_TYPE dump;

    static {
        try {
            UNSAFE = Unsafe.getUnsafe();
        } catch (IllegalAccessError e) {
            System.err.println("add \"--add-exports java.base/jdk.internal.misc=ALL-UNNAMED\" to your java command");
            throw new RuntimeException("Unable to get Unsafe instance.", e);
        } catch (InaccessibleObjectException e) {
            System.err.println("add \"--add-opens java.base/jdk.internal.misc=ALL-UNNAMED\" to your java command");
            throw new RuntimeException("Unable to get Unsafe instance.", e);
        } catch (Exception e) {
            throw new RuntimeException("Unable to get Unsafe instance.", e);
        }
    }

#ifndef NO_NATIVE
    public static class NativeAddress extends MicroBench {
        static final long offset1 = Native.getOffset1();
        static final long offset2 = Native.getOffset2();

        protected long doBatch(long numIterations) {
            boolean toggle = false;
            ACC_TYPE acc = 0;

            // cache everything before the loop so there aren't any extra loads in the loop
            long o1 = offset1;
            long o2 = offset2;
            Unsafe u = UNSAFE;

            long i;
            long o;
            for (i = 0; i < numIterations; i++) {
                if (toggle) {
                    o = o1;
                } else {
                    o = o2;
                }
                toggle = !toggle;

                System.out.printf("From Java: About to read a %s from 0x%x\n", TYPE.class.getSimpleName(), o);
                TYPE val = u.OP(null, o);
                System.out.printf("From Java: Read a %s from 0x%x\n", TYPE.class.getSimpleName(), o);
                UPDATE_ACC(acc, val);
            }

            dump = acc;
            return i;
        }
    }
#endif // NO_NATIVE

    public static class StaticField extends MicroBench {
        static TYPE field1;
        static TYPE field2;

        static final Object field1Base;
        static final Object field2Base;
        static final long field1Offset;
        static final long field2Offset;

        static {
            try {
                Field f = StaticField.class.getDeclaredField("field1");
                field1Base = UNSAFE.staticFieldBase(f);
                field1Offset = UNSAFE.staticFieldOffset(f);

                f = StaticField.class.getDeclaredField("field2");
                field2Base = UNSAFE.staticFieldBase(f);
                field2Offset = UNSAFE.staticFieldOffset(f);
            } catch (NoSuchFieldException e) {
                // should never happen
                throw new RuntimeException(e);
            }
        }

        protected long doBatch(long numIterations) {
            boolean toggle = false;
            ACC_TYPE acc = 0;

            // cache everything before the loop so there aren't any extra loads in the loop
            Object b1 = field1Base;
            Object b2 = field2Base;
            long o1 = field1Offset;
            long o2 = field2Offset;
            Unsafe u = UNSAFE;

            long i;
            Object b;
            long o;
            for (i = 0; i < numIterations; i++) {
                if (toggle) {
                    b = b1;
                    o = o1;
                } else {
                    b = b2;
                    o = o2;
                }
                toggle = !toggle;

                TYPE val = u.OP(b, o);
                UPDATE_ACC(acc, val);
            }

            dump = acc;
            return i;
        }
    }

    public static class Member extends MicroBench {
        TYPE field1;
        TYPE field2;

        static final long field1Offset = UNSAFE.objectFieldOffset(Member.class, "field1");
        static final long field2Offset = UNSAFE.objectFieldOffset(Member.class, "field2");

        protected long doBatch(long numIterations) {
            boolean toggle = false;
            ACC_TYPE acc = 0;

            // cache everything before the loop so there aren't any extra loads in the loop
            long o1 = field1Offset;
            long o2 = field2Offset;
            Unsafe u = UNSAFE;

            long i;
            long o;
            for (i = 0; i < numIterations; i++) {
                if (toggle) {
                    o = o1;
                } else {
                    o = o2;
                }
                toggle = !toggle;

                TYPE val = u.OP(this, o);
                UPDATE_ACC(acc, val);
            }

            dump = acc;
            return i;
        }
    }

    public static class Array extends MicroBench {
        static final int shift;
        static final int offset;

        private static final int arraySize = 0x8000000;
        private static final Object array;

        static {
            offset = UNSAFE.arrayBaseOffset(TYPE[].class);
            int ascale = UNSAFE.arrayIndexScale(TYPE[].class);
            shift = 31 - Integer.numberOfLeadingZeros(ascale);

            array = new TYPE[arraySize];
        }

        protected long doBatch(long numIterations) {
            numIterations = (int) Math.min(numIterations, arraySize);

            ACC_TYPE acc = 0;

            // cache everything before the loop so there aren't any extra loads in the loop
            Object b = array;
            int o = offset;
            int s = shift;
            Unsafe u = UNSAFE;

            long i;
            for (i = 0; i < numIterations; i++) {
                TYPE val = u.OP(b, (i << s) + o);
                // do something simple with the loaded value so the load doesn't get killed by DCE
                UPDATE_ACC(acc, val);
            }

            dump = acc;
            return i;
        }
    }
}
